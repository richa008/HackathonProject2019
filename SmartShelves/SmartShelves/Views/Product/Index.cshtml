@model IEnumerable<SmartShelves.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <div style="min-width:100px">@Html.DisplayFor(modelItem => item.Name)</div>
</td>
            <td>
                <div style="min-width:100px">@Html.DisplayFor(modelItem => item.Price)</div>
            </td>
            <td>
                <div style="text-overflow: ellipsis;width:400px;text-overflow: ellipsis;white-space: nowrap;overflow: hidden;">@Html.DisplayFor(modelItem => item.DeviceId)</div>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
<hr/>
<p>
    <a asp-action="Create">Add Product</a>
</p>
